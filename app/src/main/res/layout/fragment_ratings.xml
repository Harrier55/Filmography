<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.rating.RatingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Функции логирования"
        android:textSize="16sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_logger_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:text="Test logger"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/read_log_file_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:text="read log File"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_log_file_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:text="delete log file"/>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:id="@+id/load_result_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>
    </ScrollView>





</LinearLayout>